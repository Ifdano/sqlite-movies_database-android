<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:focusable = "true"
    android:focusableInTouchMode = "true"
    android:background = "@color/colorMain"
    tools:context = ".MainAdd">
    
    <TextView
        android:id = "@+id/headAdd"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "@string/headAdd"
        android:textSize = "@dimen/_20ssp"
        android:textColor = "@color/colorTextWhite"
        android:background = "@color/colorHeadAdd"
        android:padding = "@dimen/_5sdp"
        android:gravity = "center"
        android:layout_weight = "0" />
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "horizontal"
        android:layout_weight = "1">
    
    	<fragment
        	android:name = "com.example.myapplication_movieslist.fragments.FragmentAddOne"
        	android:layout_width = "match_parent"
        	android:layout_height = "match_parent"
        	android:id = "@+id/add_fragment_1"
        	android:layout_weight = "2"
        	tools:layout = "@layout/add_fragment_1"/>
    
    	<LinearLayout
        	android:layout_width = "match_parent"
        	android:layout_height = "wrap_content"
        	android:orientation = "vertical"
        	android:layout_gravity = "center"
        	android:gravity = "center"
        	android:padding = "@dimen/_5sdp"
        	android:layout_weight = "5">
        
       	 	<Button
            	android:id = "@+id/buttonAdd"
            	android:layout_width = "wrap_content"
            	android:layout_height = "wrap_content"
            	android:text = "@string/buttonAdd"
            	android:textSize = "@dimen/_18ssp"
            	android:textColor = "@color/colorTextWhite"
            	android:background = "@color/colorButtonAdd"
            	android:gravity = "center"
            	android:layout_gravity = "center"
            	android:padding = "@dimen/_10sdp"
            	android:layout_marginBottom = "@dimen/_20sdp"/>
        
        	<Button
            	android:id = "@+id/buttonBack"
            	android:layout_width = "wrap_content"
            	android:layout_height = "wrap_content"
            	android:text = "@string/buttonBack"
            	android:textSize = "@dimen/_18ssp"
            	android:textColor = "@color/colorTextWhite"
            	android:background = "@color/colorButtonBack"
            	android:gravity = "center"
            	android:layout_gravity = "center"
            	android:padding = "@dimen/_10sdp"/>
        	
       	</LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>